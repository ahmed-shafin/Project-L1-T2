<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxproject.AddPlayerController" alignment="CENTER" spacing="20" styleClass="vbox-menu">
    <Label text="Add New Player" styleClass="label-title" />

    <TextField fx:id="nameField" promptText="Enter Player Name" styleClass="text-field" />
    <TextField fx:id="countryField" promptText="Enter Country" styleClass="text-field" />
    <TextField fx:id="ageField" promptText="Enter Age" styleClass="text-field" />
    <TextField fx:id="heightField" promptText="Enter Height (in meters)" styleClass="text-field" />
    <TextField fx:id="clubField" promptText="Enter Club" styleClass="text-field" />
    <TextField fx:id="positionField" promptText="Enter Position" styleClass="text-field" />
    <TextField fx:id="numberField" promptText="Enter Jersey Number" styleClass="text-field" />
    <TextField fx:id="weeklySalaryField" promptText="Enter Weekly Salary" styleClass="text-field" />

    <Button fx:id="addButton" text="Add Player" styleClass="button" />
    <Label fx:id="statusLabel" styleClass="label-result" wrapText="true" />
    <Button fx:id="backButton" text="Back" styleClass="button-secondary" />
</VBox>
