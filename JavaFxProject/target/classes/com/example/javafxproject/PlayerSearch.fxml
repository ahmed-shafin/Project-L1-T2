    <Label styleClass="label-title" text="Search Players" />

    <Button fx:id="byNameButton" styleClass="button" text="Search by Name" />
    <Button fx:id="byClubCountryButton" styleClass="button" text="Search by Club and Country" />
    <Button fx:id="byPositionButton" styleClass="button" text="Search by Position" />
    <Button fx:id="bySalaryRangeButton" styleClass="button" text="Search by Salary Range" />
