        <Label styleClass="label-title" text="Main Menu" />
        <Button fx:id="searchPlayersButton" styleClass="button" text="Search Players" />
        <Button fx:id="searchClubsButton" styleClass="button" text="Search Clubs" />
        <Button fx:id="addPlayerButton" styleClass="button" text="Add Player" />
        <Button fx:id="exitButton" styleClass="button" text="Exit System" />
    </VBox>
</AnchorPane>
