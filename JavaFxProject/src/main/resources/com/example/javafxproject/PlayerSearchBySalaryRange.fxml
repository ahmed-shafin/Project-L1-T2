<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxproject.PlayerSearchBySalaryRangeController" spacing="20" alignment="CENTER" styleClass="vbox-menu">
    <Label text="Search Players by Salary Range" styleClass="label-title" />

    <TextField fx:id="lowSalaryField" promptText="Enter minimum salary" styleClass="text-field" />
    <TextField fx:id="highSalaryField" promptText="Enter maximum salary" styleClass="text-field" />

    <Button fx:id="searchButton" text="Search" styleClass="button" />

    <Label fx:id="resultLabel" styleClass="label-result" wrapText="true" />

    <Button fx:id="backButton" text="Back" styleClass="button-secondary" />
</VBox>
