<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ipl.marketplace.ServerController">

    <Label text="Server Login" styleClass="label-title" />
    <TextField fx:id="usernameField" promptText="Username" />
    <TextField fx:id="passwordField" promptText="Password" />
    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" />
    <Label fx:id="statusLabel" text="" />

    <TextArea fx:id="messagesArea" editable="false" prefHeight="300" prefWidth="400" />

    <Label text="Add New Player" />
    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Name" />
        <TextField fx:id="countryField" promptText="Country" />
        <TextField fx:id="ageField" promptText="Age" />
        <TextField fx:id="heightField" promptText="Height" />
    </HBox>
    <HBox spacing="10">
        <TextField fx:id="clubField" promptText="Club" />
        <TextField fx:id="positionField" promptText="Position" />
        <TextField fx:id="numberField" promptText="Number" />
        <TextField fx:id="weeklySalaryField" promptText="Weekly Salary" />
    </HBox>
    <Button fx:id="addPlayerButton" text="Add Player" onAction="#handleAddPlayer" />
</VBox>
